<% include ../partials/header %>

<div class = "container">
    <div class = "row">
         <h1 style = "text-align: center"> EDIT <%=apparel.name%> </h1>
        <div style = "width: 30%; margin:25px auto">
            <form action = "/apparel/<%=apparel.id%>?_method=PUT" method = "POST">
                <div class = "form-group">
                    <input class = "form-control" type = "text" name = "apparel[name]" value = "<%=apparel.name%>">
                </div>
                <div class = "form-group">
                    <input class = "form-control"type = "text" name = "apparel[image]" value = "<%=apparel.image%>">
                </div>
                <div class = "form-group">
                    <input class = "form-control"type = "text" name = "apparel[description]" value = "<%=apparel.description%>">
                </div>
                <div class = "form-group">
                    <button class = "btn btn-lg btn-default btn-block btn-primary"> SUBMIT! </button>
                </div>
            </form>
            <a href = "/apparel">Back to Posts!</a>
        </div>
    </div>
</div>
