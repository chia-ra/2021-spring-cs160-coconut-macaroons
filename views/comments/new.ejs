<% include ../partials/header %>
<div class = "container">
    <div class = "row">  
         <h1 style = "text-align: center"> Add a New Comment! to <%= apparel.name %></h1>
        <div style = "width: 30%; margin:25px auto"> 
            <form action = "/apparel/<%= apparel._id %>/comments" method = "POST">
                <div class = "form-group">
                    <input class = "form-control" type = "text" name = "comment[text]" placeholder = "text">
                </div>          
                <div class = "form-group">
                    <button class = "btn btn-lg btn-default btn-block btn-primary"> SUBMIT! </button>
                </div>
            </form>
            <a href = "/campgrounds">Back to all listings!</a>
        </div>
    </div>
</div>
